<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

<div class="container">
    <br/><br/>

    <h3>Eventos</h3>

    <div class="row">
        {{#eventos}}
            <div class="col s4">
                <div class="card">
                    {{#imagenPreviewId}}
                        <div class="card-image waves-effect waves-block waves-light">
                            <a href="/eventos/{{eventoId}}">
                                <img class="activator" src="/api/files/{{imagenPreviewId}}">
                            </a>
                        </div>
                    {{/imagenPreviewId}}
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{nombre}}<i
                                class="material-icons right">more_vert</i></span>

                        <p><a href="/eventos/{{eventoId}}">Ver</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{nombre}}<i
                                class="material-icons right">close</i></span>

                        <p>{{descripcion}}</p>
                    </div>
                </div>
            </div>
        {{/eventos}}
    </div>
</div>