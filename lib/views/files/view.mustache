<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

<br/><br/>
<div class="container">
    <div class="card">
        <div class="card-content">
            <div class="row">
                <div class="col s6">
                    <div>
                        <p style="overflow: hidden;"><b>File name:</b> <i>{{filename}}</i></p>
                        <p><b>Content Type:</b> {{contentType}}</p>
                        <p><b>Upload Date:</b> {{fileUploadDate}}</p>
                    </div>
                    {{# isImage}}
                    <div class="card-image">
                        <br/>
                        <img src="/api/files/{{fileId}}">
                    </div>
                    {{/ isImage}}
                </div>
                <div class="col offset-s1 s5">
                    <span class="card-title grey-text text-darken-4">Actualizar archivo</span>
                    <form action="change" method="post" enctype="multipart/form-data">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="file"/>
                            </div>
                            <input class="file-path validate" type="text" name="filename"/>
                        </div>
                        <br/>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Actualizar
                            <i class="material-icons">file_upload</i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <a class="waves-effect waves-light btn blue"
       target="_blank"
       href="/api/files/{{fileId}}"
       style="float: left;">
        <i class="material-icons right">file_download</i>Download
    </a>
    <a class="waves-effect waves-light btn red"
       href="/files/{{fileId}}/delete"
        style="float: right;">
        <i class="material-icons right">delete</i>DELETE
    </a>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large blue"
       href="/files">
        <i class="large material-icons">reply</i>
    </a>
</div>