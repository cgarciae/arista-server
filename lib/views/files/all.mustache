<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

<br/><br/>
<div class="container">
    {{# .}}
    <a href="/files/{{fileId}}/view" style="color: inherit; text-decoration: none;">
        <div class="card row">
            {{# isImage}}
            <div class="card-image col s3">
                <br/>
                <img src="/api/files/{{fileId}}">
                <br/>
                <br/>
            </div>
            {{/ isImage}}
            <div class="card-content col s9">
                <p style="overflow: hidden;"><b>File name:</b> {{filename}}</p>
                <p><b>Content Type:</b> {{contentType}}</p>
                <p><b>Version:</b> {{version}}</p>
            </div>
        </div>
    </a>
    {{/ .}}
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red"
        href="files/new">
        <i class="large material-icons">add</i>
    </a>
</div>